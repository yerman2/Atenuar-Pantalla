{
  "name": "atenuador-pantalla",
  "version": "1.0.0",
  "description": "Aplicación para atenuar la pantalla y reducir el cansancio visual",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
  
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yerman2.atenuadorpantalla",
    "productName": "Atenuador de Pantalla",
    "icon": "assets/icono.ico",
    "copyright": "© 2024 Yerman2",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/**/*",  
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/sunoff.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraMetadata": {
      "version": "1.0.0"
    }
  }
}
